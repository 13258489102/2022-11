#include<stdio.h>
#include<math.h>
int main()
{
	int a, b, c;
	double k, x1, x2;
	printf("请输入二次函数的对应啊ABC值：");
	scanf("%d%d%d", &a, &b, &c);
	for (; a = 0;)
	{
		printf("请重新输入（注意a不能为0）：");
		scanf("%d%d%d", &a, &b, &c);
	}
	k = b ^ 2 + 4 * a * c;
	x1 = (-b + sqrt(k)) / 2;
	x2 = (-b - sqrt(k)) / 2;
	if (x1 != x2)
		printf("该一元二次方程的两根分别是：%.5lf和%.5lf", x1, x2);
	else
		printf("该一元二次方程仅有一个根且该根是：%.5lf", x1);
	return 0;
}
