#include<stdio.h>
int main()
{
	int n, i, k;
	float average,sum;
	int arr[] = { 0 };
	printf("请输入学生人数：");
	scanf("%d", &n);
	printf("请分别输入%d个学生的成绩", n);
	for (i = 0; i < n; i++)
		scanf("%d", &arr[i]);
	for (i = 0,k=0; i < n; i++)
	{
		if (arr[i] < 60)
			k++;
	}
	for (i = 0, sum = 0; i < n; i++)
		sum += arr[i];
	average = sum / n;
	printf("平均成绩是：%.1f", average);
	printf("不及格人数是：%d", k);
	return 0;
}


